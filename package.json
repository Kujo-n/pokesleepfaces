{
  "name": "sleepingfaceschecker",
  "version": "1.4.0",
  "private": true,
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "update:data": "node scripts/fetch-sheets-to-ts.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:staging": "node -e \"require('fs').copyFileSync('.env.local.staging', '.env.local')\" && npm run build && firebase hosting:channel:deploy staging",
    "deploy:prod": "node -e \"try { require('fs').unlinkSync('.env.local') } catch(e) {}\" && npm run build && firebase deploy --only hosting",
    "copy:user": "node scripts/copy-user-data.js"
  },
  "dependencies": {
    "firebase": "^12.6.0",
    "next": "16.0.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-swipeable": "^7.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "axios": "^1.13.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}